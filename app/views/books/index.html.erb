<body>
  <h1>Books</h1>

<table>
 <thead>
　 <tr>
　　 <th>Title</th>
　　 <th>Body</th>
    <th colspan= "3"></th>
　 </tr>
 </thead>

 <tbody>
 <% @books.each do |book| %>
  <tr>
　　 <td><%= book.title %></td>
　　 <td><%= book.body %></td>

    <td></div><%= link_to "Show", book_path(book.id) %></div></td>
    <td></div><%= link_to "Edit", edit_book_path(book.id) %></div></td>
    <td></div><%= link_to "Destroy", book_path(book.id),  method: :delete, data:{ confirm: 'Are you sure?' }, class:"destroy" %></div>
    </td>
　 </tr>
 <% end %>
 </tbody>
</table>

<h2>New book</h2>

<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
   <h4><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h4>
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
<% end %>
 </ul>
<% end %>

<p>Title</br>
<%= f.text_field :title %></p>

<p>Body</br>
<%= f.text_area :body %></p>

<%= f.submit 'Create Book' %>

<% end %>

</body>